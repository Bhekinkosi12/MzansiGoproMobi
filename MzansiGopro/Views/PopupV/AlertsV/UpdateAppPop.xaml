<?xml version="1.0" encoding="utf-8" ?>
<xct:Popup xmlns="http://xamarin.com/schemas/2014/forms"
               xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
            Size="300,500" Color="Transparent"  BackgroundColor="Transparent"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MzansiGopro.Views.PopupV.AlertsV.UpdateAppPop">
    <Frame Padding="10" BackgroundColor="#fff" CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>

            <Image Source="celebrate.png" Aspect="AspectFit" />

            <Label Grid.Row="1" Text="A new version is now available on the play store. Please note curtain features will not work properly on this old version. " TextColor="#191919" FontSize="17" HorizontalTextAlignment="Center" />


            <Button Text="OKAY" Clicked="Button_Clicked"  TextColor="{StaticResource secondaryPurple}" BorderColor="{StaticResource secondaryPurple}" Grid.Row="2" BorderWidth="1" CornerRadius="5" BackgroundColor="Transparent" />


        </Grid>

    </Frame>
</xct:Popup>